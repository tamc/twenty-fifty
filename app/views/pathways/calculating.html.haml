%script{ :type => 'text/javascript' }
  $(document).ready(function() {
  = scroll_to_last_position(false) # False means: Remember current position for reload once calcualted
  = poll check_if_calculated_pathway_url(@code)
  })

#demand
  .chart#demand_chart 
  .switch &nbsp;
  = render "demand_choices"

#supply
  .chart#supply_chart
    .loading Calculating
    #pathwayPollingCounter 0s
  .switch &nbsp;
  = render "supply_choices"
  
#ghg
  
  .chart#emissions_chart
  .switch &nbsp;
  = render "ghg_choices"
  
  %h2 Energy security

  %table.choice_bars.detail#security_detail
    = choice_bars @pathway.security_row
      
.clear