var demand_chart = new Highcharts.Chart({ 
  chart: { renderTo: 'demand_chart', defaultSeriesType: 'line' },
  title: { text: 'UK electricity demand' },
  subtitle: { text: "TWh/yr of electricity"},
  colors: ['#FF0000','#FFA500','#FFFF00','#00FF00'],
  plotOptions: {line: {lineColor: null, lineWidth: 2 }},
  yAxis: { title: null, min: 0, max: 4000 },
  series: <%= electricity_demand_range_data.to_json %>
});

var supply_chart = new Highcharts.Chart({ 
  chart: { renderTo: 'supply_chart', defaultSeriesType: 'line' },
  title: { text: 'Unabated thermal generation' },
  subtitle: { text: "TWh/yr of electricity"},
  colors: ['#FF0000','#FFA500','#FFFF00','#00FF00'],
  plotOptions: {line: {lineColor: null, lineWidth: 2 }},
  yAxis: { title: null, min: 0, max: 4000 },
  series: <%= electricity_supply_range_data.to_json %>
});

var emissions_chart = new Highcharts.Chart({ 
  chart: { renderTo: 'emissions_chart', defaultSeriesType: 'line' },
  title: { text: 'UK greenhouse gas emissions from electricity' },
  subtitle: { text: "MtCO<sub>2</sub>e/yr"},   
  colors: ['#FF0000','#FFA500','#FFFF00','#00FF00'],
  plotOptions: {line: {lineColor: null, lineWidth: 2 }},
  yAxis: { title: null, min: -500, max: 1000 },
  tooltip: {
    formatter: function() {
      return '<b>'+ this.series.name +'</b><br/>'+
      this.x +': '+ Highcharts.numberFormat(this.y, 0, ',') +' MtCO2e/yr';
    }
  },
  series: <%= electricity_emissions_range_data.to_json %>
});